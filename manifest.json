{
  "manifest_version": 2,

  "name": "Web Disability Simulator",
  "description": "Simulates how people with disabilities sees the web",
  "version": "1.0",

  "browser_action": {
    "default_icon": "UI/img/icon.png",
    "default_popup": "UI/app.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": [],
      "js": ["UI/vendor/jquery/jquery-2.0.3.min.js","simulations/vendor/D3/d3.js", "simulations/vendor/daltonize/daltonize.js"]
    }
  ],
  "web_accessible_resources": [
    "simulations/redGreenColorBlindness/img/filters.svg"
  ],
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ]
}

