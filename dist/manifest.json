{
  "manifest_version": 2,

  "name": "Web Disability Simulator",
  "description": "Simulates how people with disabilities sees the web",
  "version": "1.0",

  "browser_action": {
    "default_icon": "UI/img/icon.png",
    "default_popup": "UI/app.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["UI/vendor/bootstrap/bootstrap.min.css", "simulations/general/loading/main.css" ],
      "js": ["UI/vendor/jquery/jquery-2.0.3.min.js", "UI/vendor/bootstrap/bootstrap.min.js"],
      "run_at":"document_end"
    }
  ],
  "web_accessible_resources": [
    "simulations/redGreenColorBlindness/img/filters.svg", "UI/img/loading_icon.svg"
  ],
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "storage", "activeTab"
  ]
}