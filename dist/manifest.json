{
  "manifest_version": 2,

  "name": "Web Disability Simulator",
  "description": "Simulates how people with disabilities sees the web",
  "version": "1.0",

  "browser_action": {
    "default_icon": "UI/img/icon.png",
    "default_popup": "UI/app.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["UI/vendor/bootstrap/bootstrap.min.css"],
      "js": ["UI/vendor/jquery/jquery-2.0.3.min.js", "UI/vendor/bootstrap/bootstrap.min.js"],
      "run_at":"document_end"
    }
  ],
  "background" : {
    "scripts" : ["background.js"]
  },
  "web_accessible_resources": [
    "simulations/colorBlindness/img/filters.svg", 
    "simulations/general/loading/loadingModal.html", 
    "simulations/parkinsons/img/cursor_windows.svg",
    "simulations/parkinsons/img/cursor_mac.svg"
  ],
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "storage", "activeTab"
  ]
}